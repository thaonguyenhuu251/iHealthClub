<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/_10sdp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <ImageView
        android:id="@+id/iv_images"
        android:layout_width="0dp"
        android:layout_height="@dimen/_24sdp"
        android:layout_weight="1"
        android:paddingBottom="@dimen/_1sdp"
        android:src="@drawable/img_post_home_image" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="@dimen/_24sdp"
        android:layout_weight="1"
        android:paddingBottom="@dimen/_1sdp"
        android:src="@drawable/img_post_home_tag" />

    <ImageView
        android:id="@+id/iv_emoji"
        android:layout_width="0dp"
        android:layout_height="@dimen/_24sdp"
        android:layout_weight="1"
        android:paddingBottom="@dimen/_1sdp"
        android:src="@drawable/img_post_home_emoji" />

    <ImageView
        android:id="@+id/im_post_more"
        android:layout_width="0dp"
        android:layout_height="@dimen/_24sdp"
        android:layout_weight="1"
        android:padding="@dimen/_2sdp"
        android:src="@drawable/img_post_home_more" />

</LinearLayout>

